<h3>観光地一覧</h3>
  <p>全<%= @place_all.count %>件</p>
    <div class="new">
      新規登録する際は<%= link_to"こちらから", new_place_path %>
    </div>
      <% @places.each do |place| %>
        <p>投稿画像
          <%= link_to place_path(place.id) do %>
            <%= attachment_image_tag(place, :image, :fill, 150, 100, format: 'jpeg', fallback: "no_image.jpg") %>
          <% end %>
        </p>
        <p>観光地名
          <%= link_to place_path(place.id) do %>
            <%= place.name %>
          <% end %>
        </p>
        <p>住所
          <%= place.address %>
        </p>
        <p>投稿ユーザー
          <% if user_signed_in? %>
            <%= link_to user_path(place.user) do %>
              <%= place.user.name %>
            <% end %>
          <% else %>
            <%= place.user.name %>
          <% end %>
        </p>
        <p><%= link_to "#{place.place_comments.count} コメント", place_path(place.id) %></p>
      <% end %>
  <%= paginate @places %>
<%= link_to :back do %>
 <button>Back</button>
<% end %>