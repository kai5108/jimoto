<h3>User一覧</h3>
<% @user each do |user| %>
  <div class="user_index">
    <span>
      <%= link_to user_path(user.id) do %>
        <%= attachment_image_tag(user, :image, :fill, 150, 100, format: 'jpeg', fallback: "no_image.jpg") %>
      <% end %>
    </span>
    <span>name<%= user.name %></span>
    <span>自己紹介<%= user.capitan %></span>
    <span>follow</span>
    <span>follower</span>
    <span>post<%= user.place </span>
  </div>
<% end %>