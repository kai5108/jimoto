<h3>User</h3>
<% @user.each do |user| %>
  <div class="user_index">
    <p>
      <%= link_to user_path(user.id) do %>
        <%= attachment_image_tag(user, :image, :fill, 150, 100, format: 'jpeg', fallback: "no_image.jpg") %>
      <% end %>
    </p>
    <p>name<%= user.name %></p>
    <p>follow</p>
    <p>follower</p>
    <p>post<%= user.places %></p>
  </div>
<% end %>