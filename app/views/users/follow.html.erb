<h3>follow</h3>

<%= form_with model: @user, url:'follow', local: true do |f| %>
  <% @user.followings.each do |user| %>
    <div class="follow_index">
      <p><%= attachment_image_tag(user, :image, :fill, 150, 100, format: 'jpeg', fallback: "no_image.jpg") %></p>
      <p><%= user.name %></p>
      <p><%= user.followings.count %></p>
      <p><%= user.followers.count %></p>
      <p><%= link_to "Show",user_path(user.id) %></p>
    </div>
  <% end %>
<% end %>